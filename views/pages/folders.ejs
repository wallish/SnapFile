<!-- views/pages/folder.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <span style="float:right; margin-bottom:10px">
            <button type="button" id="create-folder" class="btn btn-success">Ajouter</button>
        </span>
        <div style="clear:both"></div>
        <table class="table table-striped">
        <tr>
            <td>Icone</td>
            <td>Nom</td>
            <td>Crée par</td>
            <td>Date d'ajout</td>
            <td>Action</td>
        </tr>
            <% for(var i=0; i<data.length; i++) {%>
            <tr>
            <td> - </td>
            <td><%=data[i].name%></td>
            <td><%=data[i].user%></td>
            <td><%=data[i].dateinsert%></td>
            <td>
                <button type="button" class="btn btn-primary btn-xs">Voir</button>
                <button type="button" class="btn btn-danger btn-xs">Supprimer</button>
            </td>
            <% } %>
        </tr>
        </table>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>
    <script>
        $("#create-folder").on("click",function(){
            BootstrapDialog.show({
                title: "Création d'un répertoire",
                message: "<% include ../partials/newfolder %>",
                buttons: [{
                        label: 'Ajouter',
                        action: function(dialogRef){
                            $.ajax({

                            });
                            dialogRef.close();
                        }
                    },{
                        label: 'Annuler',
                        action: function(dialogRef){
                            dialogRef.close();
                        }
                    }

            });
        });
    </script>
</body>
</html>